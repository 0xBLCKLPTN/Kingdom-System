alpha = { 'a'..'z' | 'A'..'Z' }
digit = { '0'..'9' }
//ident = { !digit ~ (alpha | digit)+ }
ident = @{ ASCII_ALPHA ~ (ASCII_ALPHANUMERIC)* }

item = { ident }
items = { item ~ (( ", " | "," ) ~ item)* }

create_database = { "CREATE DATABASE " ~ ident ~ " ENGINE " ~ ident }
create_table = { "CREATE TABLE " ~ ident ~ "." ~ ident }
select_from = { "SELECT " ~ ident ~ " FROM " ~ ident }
insert_data = { "INSERT " ~ "(" ~ items ~ ")" ~ " INTO " ~ ident ~ "." ~ ident }
create_user = { "CREATE USER " ~ ident ~ " PASSWORD " ~ ident }
delete_user = { "DELETE USER " ~ ident }

delete_database = { "DELETE DATABASE " ~ ident }
delete_table = { "DELETE TABLE " ~ ident}

show_databases = { "SHOW DATABASES" }

sql_statement = { 
    create_database | create_table | select_from | 
    insert_data | create_user | delete_user |
    delete_database | delete_table | show_databases
 }

sql_statements = _{ sql_statement ~ ((";" ~ sql_statement) | ("; " ~ sql_statement))* ~ ";"? }